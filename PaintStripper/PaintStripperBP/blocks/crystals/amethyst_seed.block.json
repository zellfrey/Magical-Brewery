{
    "format_version": "1.21.90",
    "minecraft:block": {
        "description": {
            "identifier": "ps:amethyst_seed",
            "menu_category": {
                "category": "none",
                "is_hidden_in_commands": true
            },
            "traits": {
                "minecraft:placement_position": {
                    "enabled_states": ["minecraft:block_face"]
                }
            },
            "states": {
                "ps:seed_depth": [1,2,3,4]
            }
        },
        "components": {
            "tag:minecraft:is_pickaxe_item_destructible": {},
            "tag:crystal_seed": {},
            "minecraft:loot": "loot_tables/beardedflea/blocks/crystals/amethyst_seed.loot.json",
            "minecraft:map_color": "#7F3FB2",
            "minecraft:destructible_by_mining": {
                "seconds_to_destroy": 1.5
            },
            "minecraft:destructible_by_explosion": {
                "explosion_resistance": 1.5
            },
            "minecraft:placement_filter": {
                "conditions": [
                    {
                        "block_filter": ["minecraft:budding_amethyst"]
                    }
                ]
            },
            "minecraft:liquid_detection": {
                "detection_rules": [
                    {
                        "liquid_type": "water",
                        "can_contain_liquid": true
                    }
                ]
            },
            "minecraft:friction": 0.4,
            "minecraft:material_instances": {
                "*": {
                    "texture": "amethyst_seed",
                    "render_method": "alpha_test",
                    "face_dimming": false,
                    "ambient_occlusion": false
                }
            },
            "minecraft:collision_box": false,
            "minecraft:selection_box": {
                "origin": [-2.0, 0.0, -2.0],
                "size": [4.0, 8.0, 4.0]
            },
            "minecraft:geometry":{
                "identifier":"geometry.seed_crystal",
                "bone_visibility": { 
                    "depth1": "q.block_state('ps:seed_depth') == 1", 
                    "depth2": "q.block_state('ps:seed_depth') == 2",
                    "depth3": "q.block_state('ps:seed_depth') == 3",
                    "depth4": "q.block_state('ps:seed_depth') == 4"
                }
            },
            "minecraft:movable": {
                "movement_type": "popped"
            }
        },
        "permutations": [
            {
                "condition": "query.block_state('minecraft:block_face') == 'north'",
                "components": {
                    "minecraft:transformation": { "rotation": [-90, 0, 0] }
                }
            },
            {
                "condition": "query.block_state('minecraft:block_face') == 'south'",
                "components": {
                    "minecraft:transformation": { "rotation": [90, 0, 0] }
                }
            },
            {
                "condition": "query.block_state('minecraft:block_face') == 'west'",
                "components": {
                    "minecraft:transformation": { "rotation": [0, 0, 90] }
                }
            },
            {
                "condition": "query.block_state('minecraft:block_face') == 'east'",
                "components": {
                    "minecraft:transformation": { "rotation": [0, 0, -90] }
                }
            },
            {
                "condition": "query.block_state('minecraft:block_face') == 'up'",
                "components": {
                    "minecraft:transformation": { "rotation": [0, 0, 0] }
                }
            },
            {
                "condition": "query.block_state('minecraft:block_face') == 'down'",
                "components": {
                    "minecraft:transformation": { "rotation": [-180, 0, 0] }
                }
            },
            {
                "condition": "query.block_state('ps:seed_depth') == 4",
                "components": {
                    "magical_brewery:ort_seed_to_crystal": {
						"crystal_type": "amethyst"
					},
                    "minecraft:tick": {
                        "interval_range": [20,20]
                    },
                    "minecraft:selection_box": {
                        "origin": [-2.0, 0.0, -2.0],
                        "size": [4.0, 2.0, 4.0]
                    }
                }
            }
        ]
    }
}