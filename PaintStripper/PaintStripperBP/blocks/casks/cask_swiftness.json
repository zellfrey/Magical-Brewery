{
    "format_version": "1.20.80",
    "minecraft:block": {
        "description": {
            "identifier": "ps:cask_swiftness",
            "menu_category": {
                "category": "items"
            },
            "traits": {
                "minecraft:placement_direction": {
                "enabled_states": ["minecraft:cardinal_direction"],
                "y_rotation_offset": 180 
                }
            },
            "states": {
                "ps:fill_level":[0,1,2,3],
                "ps:charge_level": [0,1,2,3,4],
                "ps:aged": [false, true]
            } 
        },
        "components": {
            "tag:Swiftness": {},
            "tag:cask": {},
            "minecraft:custom_components": ["ps:pi_cask_fill", "ps:opd_cask", "ps:op_cask"],
            "minecraft:light_dampening": 4,
            "minecraft:map_color": "#229ba8",
            "minecraft:redstone_conductivity": {
                "redstone_conductor": true,
                "allows_wire_to_step_down": true
            },
            "minecraft:destructible_by_mining": {
                "seconds_to_destroy": 2.0,
                "item_specific_speeds": [
                    {
                        "item": {"tags": "q.all_tags('minecraft:is_axe', 'minecraft:wooden_tier')"},
                        "destroy_speed": 1.5
                    },
                    {
                        "item": {"tags": "q.all_tags('minecraft:is_axe', 'minecraft:stone_tier')"},
                        "destroy_speed": 0.75
                    },
                    {
                        "item": {"tags": "q.all_tags('minecraft:is_axe', 'minecraft:iron_tier')"},
                        "destroy_speed": 0.5
                    },
                    {
                        "item": {"tags": "q.all_tags('minecraft:is_axe', 'minecraft:diamond_tier')"},
                        "destroy_speed": 0.4
                    },
                    {
                        "item": {"tags": "q.all_tags('minecraft:is_axe', 'minecraft:netherite_tier')"},
                        "destroy_speed": 0.35
                    },
                    {
                        "item": {"tags": "q.all_tags('minecraft:is_axe', 'minecraft:golden_tier')"},
                        "destroy_speed": 0.25
                    }
                ]
            },
            "minecraft:flammable": { 
                "catch_chance_modifier": 5,
                "destroy_chance_modifier": 20
            },
            "minecraft:destructible_by_explosion": {
                "explosion_resistance": 3
            },
            "minecraft:material_instances": {
				"*": {
					"texture": "cask_side_swiftness"
				  },
				  "end": {
					"texture": "cask_end_swiftness"
				  },
                  "front": {
					"texture": "cask_front_swiftness"
				  },
                  "south": "end",
                  "north": "front"
			},
            "minecraft:geometry": "geometry.cask"
        },
        "permutations": [
            {
                "condition": "q.block_state('minecraft:cardinal_direction') == 'north'",
                "components": {
                "minecraft:transformation": { "rotation": [0, 0, 0] }
                }
            },
            {
                "condition": "q.block_state('minecraft:cardinal_direction') == 'west'",
                "components": {
                "minecraft:transformation": { "rotation": [0, 90, 0] }
                }
            },
            {
                "condition": "q.block_state('minecraft:cardinal_direction') == 'south'",
                "components": {
                "minecraft:transformation": { "rotation": [0, 180, 0] }
                }
            },
            {
                "condition": "q.block_state('minecraft:cardinal_direction') == 'east'",
                "components": {
                "minecraft:transformation": { "rotation": [0, -90, 0] }
                }
            },
            {
                "condition": "q.block_state('ps:fill_level') > 0 && !q.block_state('ps:aged')",
                "components": {
                "minecraft:custom_components": ["ps:ot_cask_aging", "ps:pi_cask_fill", "ps:opd_cask"],
                "minecraft:tick": {
                    "interval_range": [60,60],
                    "looping": true
		        }
                }
            }
        ]
    }
}