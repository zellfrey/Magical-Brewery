{
	"format_version": "1.21.50",
	"minecraft:block": {
		"description": {
			"identifier": "ps:stained_slab_leaping",
			"menu_category": {
				"category": "construction"
			},
			"traits": {
				"minecraft:placement_position": {
				  "enabled_states": ["minecraft:vertical_half"]
				}
			},
			"states": {
				"ps:double": [false, true]
			  }
		},
		"components": {
			"tag:slab": {},
			"minecraft:light_dampening": 4,
			"minecraft:map_color": "#a7a857",
            "minecraft:destructible_by_mining": {
                "seconds_to_destroy": 2.0,
                "item_specific_speeds": [
                    {
                        "item": {"tags": "q.all_tags('minecraft:is_axe', 'minecraft:wooden_tier')"},
                        "destroy_speed": 1.5
                    },
                    {
                        "item": {"tags": "q.all_tags('minecraft:is_axe', 'minecraft:stone_tier')"},
                        "destroy_speed": 0.75
                    },
                    {
                        "item": {"tags": "q.all_tags('minecraft:is_axe', 'minecraft:iron_tier')"},
                        "destroy_speed": 0.5
                    },
                    {
                        "item": {"tags": "q.all_tags('minecraft:is_axe', 'minecraft:diamond_tier')"},
                        "destroy_speed": 0.4
                    },
                    {
                        "item": {"tags": "q.all_tags('minecraft:is_axe', 'minecraft:netherite_tier')"},
                        "destroy_speed": 0.35
                    },
                    {
                        "item": {"tags": "q.all_tags('minecraft:is_axe', 'minecraft:golden_tier')"},
                        "destroy_speed": 0.25
                    }
                ]
            },
            "minecraft:flammable": { 
                "catch_chance_modifier": 5,
                "destroy_chance_modifier": 20
            },
            "minecraft:destructible_by_explosion": {
                "explosion_resistance": 3
            },
            "minecraft:material_instances": {
                "*": {
                    "texture": "stained_planks_leaping"
                }
            },
			"minecraft:liquid_detection": {
				"detection_rules": [
					{
						"liquid_type": "water",
						"can_contain_liquid": true
					}
				]
			},
			"minecraft:geometry": { 
				  "identifier": "geometry.slab",
				  "bone_visibility": { 
					"slab_top": "q.block_state('minecraft:vertical_half') == 'top'", 
					"slab_bottom": "q.block_state('minecraft:vertical_half') == 'bottom'" 
					}
			}
		},
		"permutations": [
            {
                "condition": "q.block_state('minecraft:vertical_half') == 'bottom' && !q.block_state('ps:double')",
                "components": {
                    "minecraft:collision_box": {
                        "origin": [-8, 0, -8],
                        "size": [16, 8, 16]
                    },
                    "minecraft:selection_box": {
                        "origin": [-8, 0, -8],
                        "size": [16, 8, 16 ]
                    }
                }
            },
            {
                "condition": "q.block_state('minecraft:vertical_half') == 'top' && !q.block_state('ps:double')",
                "components": {
                    "minecraft:collision_box": {
                        "origin": [-8, 8, -8],
                        "size": [16, 8, 16]
                    },
                    "minecraft:selection_box": {
                        "origin": [-8, 8, -8],
                        "size": [16, 8, 16]
                    }
                }
            },
			{
				"condition": "q.block_state('ps:double')",
				"components": {
					"minecraft:custom_components": ["ps:opd_slab"],
					"minecraft:geometry": "minecraft:geometry.full_block",
					"minecraft:liquid_detection": {
						"detection_rules": [
							{
								"liquid_type": "water",
								"can_contain_liquid": false
							}
						]
					},
					"minecraft:redstone_conductivity": {
						"redstone_conductor": true,
						"allows_wire_to_step_down": true
					}
				}
			}
		]
	}
}
